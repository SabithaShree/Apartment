<div class="profile-container container-fluid">
  <div id="maintanance" class="maintanance-container container-fluid">
  </div>
  <div class="row">
    <div class="col-3">
      <% let imagePath = "/uploads/" + photo; %>
      <img class="profile-pic" src=<%= imagePath %> alt="profile-pic">
    </div>
    <div class="col-9">
      <div class="profile-desc container-fluid">
        <h4><%=name%></h4>
        <p><%=flat_id%></p>
      </div>
    </div>
  </div>
  <div class="profile-details">
    <div class="row profile-detail">
      <div class="col-1 profile-label"><i class="fas fa-phone-alt"></i></div>
      <div class="col-11 profile-value"><%=phone%></div>
    </div>
    <div class="row profile-detail">
      <div class="col-1 profile-label"><i class="fas fa-envelope"></i></div>
      <div class="col-11 profile-value"><%=email%></div>
    </div>
    <div class="row profile-detail">
      <div class="col-1 profile-label"><i class="fas fa-motorcycle"></i></div>
      <div class="col-11 profile-value"><%= twowheeler %></div>
    </div>
    <div class="row profile-detail">
      <div class="col-1 profile-label"><i class="fas fa-car-side"></i></div>
      <div class="col-11 profile-value"><%= fourwheeler %></div>
    </div>
    <div class="row profile-detail">
      <div class="col-1 profile-label"><i class="fas fa-users"></i></div>
      <div class="col-11 profile-value"><%=family %></div>
    </div>
  </div>
</div>
<%- include("../partials/loading") -%>
