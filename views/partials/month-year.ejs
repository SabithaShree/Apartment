<%  let date = new Date(); 
    let currentMonth = date.getMonth() + 1;
    let currentMonthText = date.toLocaleString('default', { month: 'long' }); 
    let currentYear = date.getFullYear();
%>
<div class="btn-group month-year-dd">
    <button type="button" class="btn btn-light dropdown-toggle" id="month" val="<%= currentMonth %>" data-toggle="dropdown"><%= currentMonthText %></button>
    <div class="dropdown-menu maintanance-month" aria-labelledby="month">
      <a class="dropdown-item" val="1" href="javascript:;">January</a>
      <a class="dropdown-item" val="2" href="javascript:;">February</a>
      <a class="dropdown-item" val="3" href="javascript:;">March</a>
      <a class="dropdown-item" val="4" href="javascript:;">April</a>
      <a class="dropdown-item" val="5" href="javascript:;">May</a>
      <a class="dropdown-item" val="6" href="javascript:;">June</a>
      <a class="dropdown-item" val="7" href="javascript:;">July</a>
      <a class="dropdown-item" val="8" href="javascript:;">August</a>
      <a class="dropdown-item" val="9" href="javascript:;">September</a>
      <a class="dropdown-item" val="10" href="javascript:;">October</a>
      <a class="dropdown-item" val="11" href="javascript:;">November</a>
      <a class="dropdown-item" val="12" href="javascript:;">December</a>
    </div>
</div>
<div class="btn-group month-year-dd">
    <button type="button" class="btn btn-light dropdown-toggle" id="year" val="<%= currentYear %>" data-toggle="dropdown"><%= currentYear %></button>
    <div class="dropdown-menu maintanance-year" aria-labelledby="year">
      <a class="dropdown-item" val="2020" href="javascript:;">2020</a>
      <a class="dropdown-item" val="2021" href="javascript:;">2021</a>
      <a class="dropdown-item" val="2022" href="javascript:;">2022</a>
      <a class="dropdown-item" val="2023" href="javascript:;">2023</a>
      <a class="dropdown-item" val="2024" href="javascript:;">2024</a>
    </div>
</div>