<script>
  $(document).ready(function() {
    var settings = new Settings();
    settings.registerEvents($("#settings-container"));
  });
</script>

<div id="settings-container" class="settings-container container-fluid">
  <div class="settings-header">
    <span name="updateprofile" class="settings-menu active">Update Profile</span>
    <span name="updatepassword" class="settings-menu">Change Password</span>
    <span class="settings-menu">ABC</span>
  </div>


  <form class="updateprofile-form form-horizontal settings-form" method="post" enctype="multipart/form-data">
    <div class="form-group row">
      <label class="control-label col-sm-2" for="name">Name</label>
      <div class="col-sm-10">
        <input name="name" type="text" class="form-control" id="name" value="<%=name%>" placeholder="Enter your name">
      </div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2" for="email">Email</label>
      <div class="col-sm-10">
        <input name="email" type="email" class="form-control" id="email" value="<%=email%>" placeholder="Enter your email address">
      </div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2" for="phone">Phone</label>
      <div class="col-sm-10">
        <input name="phone" type="text" class="form-control" id="phone" value="<%=phone%>" placeholder="Enter your phone number">
      </div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2" for="family">Family</label>
      <div class="col-sm-10">
        <input name="family" type="text" class="form-control" id="family" value="<%=family%>" placeholder="Number of family members">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2" for="photo">Photo</label>
      <div class="col-sm-10">
          <input name="photo" type="file" class="form-control-file" id="photo" accept="image/*">
      </div>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary" type="submit">Update</button>
        <button class="btn btn-outline-primary btn-cancel" type="submit">Cancel</button>
    </div>
  </form>


  <form class="updatepassword-form form-horizontal settings-form hide" method="post">
    <div class="form-group row">
      <label class="control-label col-sm-4" for="opassword">Old Password</label>
      <div class="col-sm-8">
        <input name="oldPassword" type="password" class="form-control" id="opassword" placeholder="Enter your current password">
      </div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-4" for="password">New Password</label>
      <div class="col-sm-8">
        <input name="password" type="password" class="form-control" id="password" placeholder="Enter your new password">
      </div>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary" type="submit">Update</button>
        <button class="btn btn-outline-primary btn-cancel" type="submit">Cancel</button>
    </div>
  </form>
</div>
<%- include("partials/loading") -%>
